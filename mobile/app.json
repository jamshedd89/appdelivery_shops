{
  "expo": {
    "name": "AppDelivery",
    "slug": "appdelivery",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#4A6CF7"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.appdelivery.mobile",
      "config": {
        "googleMapsApiKey": "YOUR_IOS_GOOGLE_MAPS_API_KEY"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Нужен доступ к геолокации для поиска заказов и курьеров рядом",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Нужен доступ к геолокации для отслеживания доставок"
      }
    },
    "android": {
      "softInputMode": "adjustResize",
      "adaptiveIcon": {
        "backgroundColor": "#4A6CF7"
      },
      "package": "com.appdelivery.mobile",
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_ANDROID_GOOGLE_MAPS_API_KEY"
        }
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA"
      ]
    },
    "plugins": [
      "expo-location",
      "expo-image-picker",
      "expo-secure-store",
      "expo-asset"
    ]
  }
}
